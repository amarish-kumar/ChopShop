<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="ChopShop.Model"
                   assembly="ChopShop.Model"
                   schema="dbo">
  <class name="Product" table="Products">
    <id name="Id" column="Id">
      <generator class="identity" />
    </id>
    <property name="Name" column="Name" length="255" not-null="true" />
    <property name="Sku" column="Sku" length="100" not-null="false" />
    <property name="Description" type="StringClob" not-null="false">
      <column name="Description" sql-type="nvarchar(max)" />
    </property>
    <property name="IsDeleted" column="IsDeleted" not-null="true" />
    <property name="Quantity" column="Quantity" />
    <set name="Categories" table="Products_Categories" fetch="join" lazy="false" >
      <key column="ProductId" />
      <many-to-many class="Category" column="CategoryId" />
    </set>
    <bag name="Costs" table="Cost" inverse="true" fetch="join" lazy="false">
      <key column="Id" />
      <one-to-many class="Cost"/>
    </bag>
  </class>
</hibernate-mapping>